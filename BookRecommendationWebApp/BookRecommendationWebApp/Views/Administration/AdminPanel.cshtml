@model List<Book>

<div class="admin-page">
    <h1 class="my-2">Manage Books</h1>
    <div class="mt-5 mb-3 d-inline-flex justify-content-between w-100" >
        <a class="h5" asp-controller="Books" asp-action="AddBook">Add a new book</a>
        <form asp-controller="Administration" asp-action="AdminPanel" method="get">
            <div>
                <input name="searchInput" type="text">
                <input type="submit" value="Search"/>
            </div>
        </form>
    </div>
    <table class="table table-responsive table-hover p-0 m-0 border-0">
        <tbody class="w-100 d-table">
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>ISBN</th>
            </tr>
            @foreach (var book in Model)
            {
                <tr class="w-100">
                    <td>@book.Title</td>
                    <td>@book.Author</td>
                    <td>@book.Isbn</td>
                    <td><a asp-controller="Books" asp-action="EditBook" asp-route-bookId="@book.BookId" class="btn btn-primary">Edit</a></td>
                    <td>
                        <form asp-controller="Books" asp-action="DeleteBook" asp-route-bookId="@book.BookId" method="post">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this book?')">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>